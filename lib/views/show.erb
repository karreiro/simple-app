      <label for="name">Número total de CDs:</label>
      <span><%= @movie.cdNumberTotal %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Data:</label>
      <span><%= @movie.date %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Edição:</label>
      <span><%= @movie.edition %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Número do filme:</label>
      <span><%= @movie.filmNumber %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Formato:</label>
      <span><%= @movie.format %></span>
