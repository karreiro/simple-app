<form class="pure-form pure-form-aligned">
  <fieldset>
    <div class="pure-control-group">
      <label for="name">ID:</label>
      <span><%= @movie.id %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Título:</label>
      <span><%= @movie.title %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Ano:</label>
      <span><%= @movie.year %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Audio channels:</label>
      <span><%= @movie.audioChannels %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Audio codec:</label>
      <span><%= @movie.audioCodec %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Número bônus:</label>
      <span><%= @movie.bonusNumber %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Título bônus:</label>
      <span><%= @movie.bonusTitle %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Número do CD:</label>
      <span><%= @movie.cdNumber %></span>
    </div>
