      <span><%= @movie.releaseGroup %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Tamanho da tela:</label>
      <span><%= @movie.screenSize %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Idioma da legenda:</label>
      <span><%= @movie.subtitleLanguage %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Video API:</label>
      <span><%= @movie.videoApi %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Video codec:</label>
      <span><%= @movie.videoCodec %></span>
    </div>
    <div class="pure-control-group">
      <label for="name">Website:</label>
      <span><%= @movie.website %></span>
    </div>
  </fieldset>
</form>

